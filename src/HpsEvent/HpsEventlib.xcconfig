HEADER_SEARCH_PATHS=${ROOTSYS}/include ${LCIO}/include ${GBL}/include
LIBRARY_SEARCH_PATHS=${ROOTSYS}/lib ${LCIOLIBDIR} ${GBL}/lib

// To find the other libraries
LD_RUNPATH_SEARCH_PATHS=${LCIOLIBDIR}
