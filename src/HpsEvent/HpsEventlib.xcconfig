CLANG_CXX_LANGUAGE_STANDARD = c++11

LCIO=/data/HPS/lcio
LCIOLIBDIR=${LCIO}/build/${CONFIGURATION}
LCIOLIBS=-L${LCIOLIBDIR} -llcio

GBL=/data/HPSlcsim/GBL.r6/cpp
